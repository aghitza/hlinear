category:            Math
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:
    HLinear.VVMatrix
    HLinear.PLE.PLE
    HLinear.PLE.Hook

  other-modules:
    HLinear.VVMatrix.Algebra
    HLinear.VVMatrix.Algebra.Sized
    HLinear.VVMatrix.Algebra.TypeUnion
